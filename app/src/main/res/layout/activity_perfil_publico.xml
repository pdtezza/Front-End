<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Botão Voltar -->
    <ImageButton
        android:id="@+id/buttonBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@null"
        android:contentDescription="Voltar"
        android:src="@drawable/setaesquerda"
        app:tint="#000" />

    <!-- Header Centralizado com Inicial, Nome e Quantidade de Receitas -->
    <LinearLayout
        android:id="@+id/headerPerfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="16dp"
        android:layout_below="@id/buttonBack">

        <FrameLayout
            android:layout_width="60dp"
            android:layout_height="60dp">

            <View
                android:id="@+id/userCircle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/circle_orange" />

            <TextView
                android:id="@+id/userInitial"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="K"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold" />
        </FrameLayout>

        <TextView
            android:id="@+id/usernameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Nome do Usuário"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textQtdReceitas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 receitas publicadas"
            android:textColor="#000"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- RecyclerView com as Receitas do Usuário -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewUserReceitas"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/headerPerfil"
        android:layout_above="@id/bottomBar"
        android:padding="8dp"
        android:clipToPadding="false" />

    <!-- ProgressBar centralizada -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <!-- Bottom Bar -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="#FF7B1D"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageButton
            android:id="@+id/button_nav_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/casa"
            app:tint="#000" />

        <ImageButton
            android:id="@+id/button_nav_search"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/pesquisa"
            app:tint="#000" />

        <ImageButton
            android:id="@+id/button_nav_add"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/mais"
            app:tint="#000" />

        <ImageButton
            android:id="@+id/button_nav_favorites"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/coracao2"
            app:tint="#000" />

        <ImageButton
            android:id="@+id/button_nav_profile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/usuario"
            app:tint="#000" />
    </LinearLayout>

</RelativeLayout>
