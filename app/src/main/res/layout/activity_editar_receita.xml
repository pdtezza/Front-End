<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- TOPO -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#F6F6F6"
        android:orientation="horizontal"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:gravity="center_vertical">

        <!-- Botão Voltar -->
        <ImageButton
            android:id="@+id/btnVoltar"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@null"
            android:src="@drawable/setaesquerda"
            android:contentDescription="Voltar"
            app:tint="#000" />

        <!-- Nome da Tela -->
        <TextView
            android:id="@+id/txtTituloTopo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Editar Receita"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Botão de Foto (Opcional: Pode desativar se não quiser permitir troca de foto) -->
        <ImageButton
            android:id="@+id/btnFoto"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@null"
            android:src="@drawable/camera"
            android:contentDescription="Selecionar foto"
            app:tint="#000" />
    </LinearLayout>

    <!-- FORMULÁRIO -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Título -->
            <EditText
                android:id="@+id/edtTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nome da Receita"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="18dp" />

            <!-- Ingredientes -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ingredientes:"
                android:textStyle="bold"
                android:textColor="#000" />

            <EditText
                android:id="@+id/edtIngredientes"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:hint="1 ingrediente por linha"
                android:inputType="textMultiLine"
                android:gravity="top"
                android:layout_marginBottom="14dp" />

            <!-- Modo de Preparo -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Modo de Preparo:"
                android:textStyle="bold"
                android:textColor="#000" />

            <EditText
                android:id="@+id/edtModoPreparo"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:hint="Passos do preparo (1 por linha)"
                android:inputType="textMultiLine"
                android:gravity="top"
                android:layout_marginBottom="14dp" />

            <!-- Dicas -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dicas:"
                android:textStyle="bold"
                android:textColor="#000" />

            <EditText
                android:id="@+id/edtDicas"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:hint="Opcional: dicas da receita"
                android:inputType="textMultiLine"
                android:gravity="top"
                android:layout_marginBottom="14dp" />

            <!-- Switch Privada -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Receita Privada:"
                    android:textColor="#000"
                    android:textSize="17sp" />

                <Switch
                    android:id="@+id/switchPrivada"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="14dp"
                    android:thumbTint="#FF7B1D"
                    android:trackTint="#FFBB73"
                    tools:ignore="UseSwitchCompatOrMaterialXml" />
            </LinearLayout>

            <!-- Botão Salvar -->
            <Button
                android:id="@+id/btnSalvar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Salvar Alterações"
                android:backgroundTint="#FF7B1D"
                android:textColor="#fff"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

    <!-- ProgressBar centralizada -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

</LinearLayout>
