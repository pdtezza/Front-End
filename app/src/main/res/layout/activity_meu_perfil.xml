<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Header com círculo e título -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical">

        <View
            android:id="@+id/userCircle"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/circle_orange" />

        <TextView
            android:id="@+id/userInitial"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="C"
            android:textColor="#000"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginStart="-40dp" />

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Minhas receitas"
            android:textSize="18sp"
            android:textColor="#000"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- RecyclerView para o adapter com pasta + públicas -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewMinhasReceitas"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/header"
        android:layout_above="@id/bottomBar"
        android:padding="8dp"
        android:clipToPadding="false" />

    <!-- ProgressBar centralizado -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="#FF7B1D"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageButton
            android:id="@+id/button_nav_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/casa"
            app:tint="#000" />

        <ImageButton
            android:id="@+id/button_nav_search"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/pesquisa"
            app:tint="#000" />

        <ImageButton
            android:id="@+id/button_nav_add"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/mais"
            app:tint="#000" />

        <ImageButton
            android:id="@+id/button_nav_favorites"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/coracao2"
            app:tint="#000" />

        <ImageButton
            android:id="@+id/button_nav_profile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/usuario"
            app:tint="#000" />
    </LinearLayout>

</RelativeLayout>
