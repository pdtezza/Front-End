<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- TopBar com tÃ­tulo -->
    <FrameLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF7B1D"
        android:padding="16dp">

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Minhas Receitas Privadas"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold" />
    </FrameLayout>

    <!-- RecyclerView com as privadas -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewReceitas"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/topBar"
        android:layout_above="@id/bottomBar"
        android:padding="16dp"
        android:clipToPadding="false" />

    <!-- ProgressBar centralizada -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="#FF7B1D"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageButton
            android:id="@+id/button_nav_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/casa"
            android:contentDescription="Home"
            app:tint="#000" />

        <ImageButton
            android:id="@+id/button_nav_search"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/pesquisa"
            app:tint="#000" />

        <ImageButton
            android:id="@+id/button_nav_add"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/mais"
            app:tint="#000" />

        <ImageButton
            android:id="@+id/button_nav_favorites"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/coracao2"
            app:tint="#000" />

        <ImageButton
            android:id="@+id/button_nav_profile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/usuario"
            app:tint="#000" />
    </LinearLayout>

</RelativeLayout>
